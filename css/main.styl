/* Import nib*/
@import "nib"

/* Import fuentes */
@import "fonts"

/* Import icons */
@import "icons"

/* Import colores */
@import "colors"

/* Reset */
h1,h2,h3,h4,h5,h6,p,ul,li
    margin 0
    padding 0

*,*:before,*:after
    box-sizing border-box

/* Border left */
.border-left
    border-left 1px solid $blanco

/* Uso de extend como clase global */
.style-inline
    display inline-block
    vertical-align middle

/* Li seleccionado */
.is-selected
    background $B3
    color #fff
    border-none

.is-card-selected
    background $gris-oscuro !important

.is-seccion-active
    border-bottom 2px solid #9e8e7f !important
    background #e9eae9 !important

/* Linea */
.linea
    width 1px
    background #bababa
    height 100%
    @extend .style-inline
    vertical-align top

/* Contenedor */
#container,.containerCard,.limit
    margin 0 auto
    width 100%
    max-width 1408px
    min-width 1000px
.containerCard
    max-width 100%
#content
    text-align center
    position relative

html,body
    height 100%

body
    font-size 62.5%
    font-family $open

/* Start module header */
header
    padding 25px 0 20px

    section#container
        clearfix()

        a.log
            width 160px
            float left

            img
                width 100%
                display block
        nav
            float right

            ul
                list-style none

                li
                    @extend .style-inline
                    margin-left 5px

                    a
                        text-decoration none
                        color $negro
                        font-size 1.3em
                        font-family "raleway"
                        font-weight 400
                        padding 10px

                        &.gray
                            background $gris-claro

                    .box-search
                        border 1px solid #666
                        width 100%

                        input
                            display inline-block
                            padding 4px
                            border none
                            font-size 1.4em
                            outline 0
                            vertical-align middle

                        input[type="submit"]
                            width 25px
                            border-left 1px solid #666
                            font-family "icomoon"
                            background $blanco

/* End module header */

/* Start .slide */

.slide
    margin 20px auto 30px auto
    width 675px
    position relative
    height 90px

    .boxSlide
        position absolute
        top 0
        overflow hidden
        width 100%
        display none

        .discover
            width 15%
            font-size 1.4em
            font-weight 400
            margin-bottom 15px
            display inline-block
            vertical-align middle
            font-style italic

        ul
            width 84.5%
            display inline-block
            vertical-align middle
            list-style none
            text-align center

            li
                display inline-block
                vertical-align top
                margin-right 0
                width 75px

                a
                    text-decoration none
                    text-align center
                    display block

                    span.color
                        width 40px
                        height 40px
                        border-radius 50%
                        background red
                        display block
                        margin 0 auto

                    span.text
                        text-align center
                        font-size 1.4em
                        font-weight 300
                        color #666
                        display block
                        margin-top 5px

    .L2,.L3
        ul li a span.color
            border-radius 0

    .L2 .discover
     padding-top 16px

    #prev,#next
        position absolute
        top 10%
        cursor pointer
        width 0
        height 0

    #prev
        right 110%
        margin-right 15px

        &:before
            content ""
            border-top 15px solid transparent
            border-bottom 15px solid transparent
            border-right 15px solid rgb(190, 190, 190)
            position absolute

    #next
        left 110%

        &:before
            position absolute
            content ""
            border-top 15px solid transparent
            border-bottom 15px solid transparent
            border-left 15px solid rgb(190, 190, 190)


/*End .slide*/

/* Start module section#content */
section#content
    /* Start module .order */
    .order
        text-align left
        margin 15px 0

        ul
            list-style none

            li
                @extend .style-inline
                color $negro
                font-size 1.3em
                font-family "raleway"
                font-weight 400

                a
                    text-decoration none
                    padding 5px 10px
                    color $negro
                    background $gris-claro

    /* End module .order */

    /* Start module .wrapper (Card) */

    .wrapper
        background $gris-claro
        cursor pointer
        margin 1% 0.3%
        width 190px
        vertical-align top
        @extend .style-inline

        .box-image
            overflow hidden
            width 100%

            img
                display block
                height 150px
                width 100%

        .border
            height 5px
            background cat2

        .box-footer
            font-family $roboto
            text-align left
            padding 2%

            h2
                font-size 1.4em
                font-weight 200
                height 38px

                strong
                    font-weight 400
                    font-style italic

            h3
                font-size 1.1em
                font-weight 200

/* End module section#content */

