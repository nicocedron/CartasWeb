    background rgba(252, 252, 252, 0.7)
    top 0
    left 0
    position fixed
    z-index 100
    bottom 0
    right 0

    .boxAdd
        margin 30px auto 0
        width 500px
        background #444
        z-index 120
        height 500px
        position relative

        #close
            position absolute
            top 0 
            right 0
