/* Import nib*/
@import "nib"

/* Import fuentes */
@import "fonts"

/* Import icons */
@import "icons"

/* Import colores */
@import "colors"

/* Reset */
h1,h2,h3,h4,h5,h6,p,ul,li
    margin 0
    padding 0

*,*:before,*:after
    box-sizing border-box

/* Border left */
.border-left
    border-left 1px solid $blanco

/* Uso de extend como clase global */
.style-inline
    display inline-block
    vertical-align middle

/* Li seleccionado */
.is-selected
    background $B3
    color #fff
    border-none

.is-card-selected
    background $gris-oscuro !important

.is-seccion-active
    border-bottom 2px solid #9e8e7f !important
    background #e9eae9 !important

/* Linea */
.linea
    width 1px
    background #bababa
    height 100%
    @extend .style-inline
    vertical-align top

/* Contenedor */
#container
    margin 0 auto
    width 100%
    max-width 1408px
    min-width 1000px

#content
    text-align center
    position relative

html,body
    height 100%

body
    font-size 62.5%
    font-family $open

/* Start module header */
header
    padding 25px 0 20px

    section#container
        clearfix()

        a.log
            width 160px
            float left

            img
                width 100%
                display block
        nav
            float right

            ul
                list-style none

                li
                    @extend .style-inline
                    margin-left 5px

                    a
                        text-decoration none
                        color $negro
                        font-size 1.3em
                        font-family "raleway"
                        font-weight 400
                        padding 10px

                        &.gray
                            background $gris-claro

                    .box-search
                        border 1px solid #666
                        width 100%

                        input
                            display inline-block
                            padding 4px
                            border none
                            font-size 1.4em
                            outline 0
                            vertical-align middle

                        input[type="submit"]
                            width 25px
                            border-left 1px solid #666
                            font-family "icomoon"
                            background $blanco

/* End module header */

/* Start .slide */

.slide
    margin 20px auto 30px auto
    width 675px
    position relative
    height 90px

    .boxSlide
        position absolute
        top 0
        overflow hidden
        width 100%
        display none

        .discover
            width 15%
            font-size 1.4em
            font-weight 400
            margin-bottom 15px
            display inline-block
            vertical-align middle
            font-style italic

        ul
            width 84.5%
            display inline-block
            vertical-align middle
            list-style none
            text-align center

            li
                display inline-block
                vertical-align top
                margin-right 0
                width 75px

                a
                    text-decoration none
                    text-align center
                    display block

                    span.color
                        width 40px
                        height 40px
                        border-radius 50%
                        background red
                        display block
                        margin 0 auto

                    span.text
                        text-align center
                        font-size 1.4em
                        font-weight 300
                        color #666
                        display block
                        margin-top 5px

    .L2,.L3
        ul li a span.color
            border-radius 0

    .L2 .discover
     padding-top 16px

    #prev,#next
        position absolute
        top 10%
        cursor pointer
        width 0
        height 0

    #prev
        right 110%
        margin-right 15px

        &:before
            content ""
            border-top 15px solid transparent
            border-bottom 15px solid transparent
            border-right 15px solid rgb(190, 190, 190)
            position absolute

    #next
        left 110%

        &:before
            position absolute
            content ""
            border-top 15px solid transparent
            border-bottom 15px solid transparent
            border-left 15px solid rgb(190, 190, 190)


/*End .slide*/

/* Start module section#content */
section#content
    /* Start module .order */
    .order
        text-align left
        margin 15px 0

        ul
            list-style none

            li
                @extend .style-inline
                color $negro
                font-size 1.3em
                font-family "raleway"
                font-weight 400

                a
                    text-decoration none
                    padding 5px 10px
                    color $negro
                    background $gris-claro

    /* End module .order */

    /* Start module .wrapper (Card) */

    .wrapper
        background $gris-claro
        cursor pointer
        margin 1% 0.3%
        width 190px
        vertical-align top
        @extend .style-inline

        .box-image
            overflow hidden
            width 100%

            img
                display block
                height 150px
                width 100%

        .border
            height 5px
            background cat2

        .box-footer
            font-family $roboto
            text-align left
            padding 2%

            h2
                font-size 1.4em
                font-weight 200
                height 38px

                strong
                    font-weight 400
                    font-style italic

            h3
                font-size 1.1em
                font-weight 200

/* End module section#content */

/* Start module section.box-content*/

.box-content
    border 1px solid #EBEBEB
    margin 20px 0
    overflow hidden
    font-family 'Raleway',sans-serif
    clearfix()

    .colSmall
        width 20%
        float left

        ul
            list-style none

            li.title
                text-align center
                background #6dbe45
                padding 0

                a
                    text-decoration: none
                    font-size 1.6em
                    padding 10px
                    color #fff
                    display block
                    font-family: 'Raleway',sans-serif

                    &:after
                        content "\e601"
                        font-family "icomoon"
                        margin-left 5px
                        font-size 1.5em
                        vertical-align middle
                        color $gris-claro

            li.iniciar
                background $gris-claro
                padding 0
                text-align center

                a
                    text-decoration none
                    font-size 1.4em
                    padding 10px
                    color #000
                    display block
                    font-family 'Raleway',sans-serif

                    &:after
                        content "\e605"
                        font-family "icomoon"
                        margin-left 5px
                        font-size 1.5em
                        vertical-align middle
                        color #444

            li
                position relative
                padding 7px 5px
                border-bottom 1px solid #EBEBEB
                border-right 1px solid #EBEBEB

                .img-left
                    float left
                    width 52%
                    overflow hidden
                    clearfix()

                    .box-image
                        float left
                        margin-left 1px
                        width 30px
                        height 30px
                        

                        img
                            width 100%
                            display block

                h4
                    float left
                    width 48%
                    text-align right
                    font-family $roboto
                    font-weight 200
                    font-size 1.1em

                    span
                        display block

                        &:last-child
                            font-style italic

                h2
                    font-size 1.4em
                    font-family $roboto
                    font-weight 400
                    color #2A2A2A
                    clear both
                    padding-top 4px
    .colLarge
        width 80%
        float left

        .colChat
            width 40%
            float left
            font-family $roboto
            border-right 1px solid #EBEBEB
            padding-bottom 50px
            padding-left 1%

            h4
                font-size 1.4em
                font-weight 200

                &.share
                    margin 5px 0

            h1
                font-size 2.5em
                margin 5px 0 10px
                font-weight 400
                color #353535

            ul
                list-style none

                li
                    margin 12px 0

                    h3.person
                        font-size 1.6em
                        font-weight 500
                        color #2C2C2C

                    h4
                        font-size 1.3em
                        font-weight 200

                    h5
                        text-align center
                        font-size 1.4em
                        font-weight 400
                        font-style italic

                    .box-carta
                        position relative
                        margin 7.5px 0

                        .image
                            width 200px
                            height 90px
                            position absolute
                            left 0
                            top 0
                            bottom 0

                            img
                                display block
                                width 100%
                                height 90px

                        .content
                            padding-left 207px
                            background $gris-claro
                            height 90px

                            h2
                                font-size 1.2em
                                font-weight 200
                                padding 10px 0px 5px

                                strong
                                    font-style italic

                            h3
                                font-size 1em
                                font-weight 200
                                margin 3px 0
                /*.acuerdo
                    span.icono
                        font-size 3em
                        color #666
                        @extend .style-inline
                        margin-right 7px
                        width 30px

                    span.textoAcuerdo
                        font-size 1.4em
                        font-weight 400
                        font-style italic
                        width 400px
                        @extend .style-inline
                */
                .acuerdo
                    position relative
                    min-height 38px

                    span.icono
                        font-size 3em
                        color #666
                        position absolute
                        top 0
                        left 0
                        display block

                    span.textoAcuerdo
                        padding-left 37px
                        font-size 1.4em
                        font-weight 400
                        font-style italic
                        display block


        .colCard
            width 60%
            float left
            position relative

            >ul
                list-style none
                position absolute
                top 5px
                right 0

                li
                    display block
                    margin 5px 0

                    a
                        display block
                        text-decoration none
                        background $B2
                        padding 10px
                        color #fff
                        font-size 1.2em

                    &:first-child
                        a:before
                            content "\e601"
                            font-family "icomoon"
                            margin-right 5px
                            font-size 1.5em
                            vertical-align middle
                            color $gris-claro

                    &:last-child
                        a:before
                            content "\e603"
                            font-family "icomoon"
                            margin-right 5px
                            font-size 1.5em
                            vertical-align middle
                            color $gris-claro

            .wrapper-new
                border 3px solid #bababa
                display block
                padding 9px
                position relative
                margin 20px 10px

                &:after
                    width 0
                    height 0
                    position: absolute
                    content ""
                    border-top 10px solid transparent
                    border-right 10px solid #bababa
                    border-bottom 10px solid transparent
                    top 20px
                    left -12px

                &.marginNew
                    margin 103px 10px 20px

                a.exit
                    display block
                    position absolute
                    top 5px
                    right 5px
                    background $gris-claro
                    font-size 2.5em
                    color $gris-oscuro
                    text-decoration none
                    padding 5px 15px

                .description
                    font-family $roboto
                    width 56%
                    @extend .style-inline

                    h2
                        font-size 1.7em
                        font-weight 300
                        margin-bottom 7px
                        line-height 1.3em
                    h5
                        font-size 1.2em
                        font-weight 200
                    h3
                        font-size 1.4em
                        font-weight 200
                        margin 10px 0

                    .options
                        ul
                            list-style none
                            margin 8px 0

                            li
                                width 15px
                                height 15px
                                margin 0 4px
                                border-radius 10px
                                background #444
                                @extend .style-inline

                    h4
                        font-size 1.4em
                        font-weight 200

                        &:before
                            content: "\66";
                            font-family: "icomoon";
                            margin-right: 8px;
                            font-size: 2em;
                            vertical-align: middle;
                            color: #197db6;
                .add
                    width 43%
                    @extend .style-inline

                    a
                        text-decoration none
                        font-size 1.4em
                        padding 5px 10px
                        color #000
                        background #e5e5e5
                        display block
                        font-family 'Raleway',sans-serif;
                        margin-top 40px

                    ul
                        margin-top 25px
                        list-style none

                        li
                            border-bottom 2px solid #bababa
                            margin-bottom 10px
                            font-size 1.3em
                            font-weight 200

                            span
                                text-align left
                                width 82%
                                @extend .style-inline

                            input
                                text-align right
                                width 15%

                                @extend .style-inline
        .content-foo
            clear both
            width 100%
            border-top 1px solid #EBEBEB
            border-bottom 1px solid #EBEBEB
            clearfix()

            .box-textarea
                width 40%
                float left
                padding 30px 1% 0

                .contentTextarea
                    position relative
                    width 100%

                    textarea
                        width 100%
                        border none
                        min-height 100px
                        padding 5px 22px 5px 5px
                        display block
                        border 1px solid #EBEBEB
                        font-size 1.4em

                    &:before
                        position absolute
                        top 1px
                        right 0
                        content "\e606"
                        font-family 'icomoon'
                        font-size 2em
                        color #444
                        background #EBEBEB
                        border-left 1px solid #EBEBEB
                        border-bottom 1px solid #EBEBEB

            .box-icons
                float left
                width 60%
                text-align center
                border-left 1px solid #EBEBEB
                margin-left -1px

                ul
                    list-style none
                    padding 0 80px

                    li
                        text-align center
                        width 85px
                        margin 10px 0
                        cursor pointer
                        @extend .style-inline

                        span.titleIcon
                            font-size 1.3em
                            font-weight 200
                            text-align center
                            display block
                            margin-bottom 5px

                        i
                            display block
                            text-align center
                            font-size 3em
                            color #666

/* End module section.box-content*/

/* Wrapper expanded */
.wrapper-expanded
    border 3px solid $gris-oscuro
    display block
    padding 15px 50px
    position relative
    margin 20px 0
    min-width 1000px
    width 100%
    clearfix()

    &:before
        width 0
        height 0
        position absolute
        content ""
        border-left 20px solid transparent
        border-right 20px solid transparent
        border-bottom 20px solid $gris-oscuro
        top -22px
        left 28%

    a.exit
        display block
        position absolute
        top 5px
        right 5px
        background $gris-claro
        font-size 3em
        color $gris-oscuro
        text-decoration none
        padding 5px 15px

    #container
        min-width 0

        .box1,.box2,.box3
            font-family $roboto
            margin 0
            float left
            height 255px

            ul
                list-style none

                li
                    a
                        text-decoration none

        .box1
            width 50%
            //min-width 480px
            margin 0

            .box-image
                position relative
                width 27%
                float left

                img
                    width 100%
                    display block
                    height 250px

                ul
                    position absolute
                    left 50%
                    margin-left -50px
                    bottom 8px

                    li
                        @extend .style-inline
                        margin 0 5px

                        a
                            width 25px
                            height 25px
                            background $cat-6
                            border-radius 25px
                            display block

            .description
                width 70%
                text-align left
                padding-left 3%
                float left

                h2
                    font-size 1.6em
                    font-weight 300
                    margin-bottom 15px

                    strong
                        font-weight 400
                        font-style italic

                h3
                    font-size 1.4em
                    font-weight 200
                    margin 10px 0

                h5
                    font-size 1.2em
                    font-weight 200

                    &.margin
                        margin 30px 0

                h4
                    font-size 1.4em
                    font-weight 200
                    margin 0

                    &:before
                        content "\66"
                        font-family "icomoon"
                        margin-right 8px
                        font-size 2em
                        vertical-align middle
                        color #197db6

        .box2
            width 21%
            //min-width 270px
            margin 0 3% 0 2%

            a
                text-decoration none
                font-size 1.6em
                padding 5px 10px
                color #000
                background #e5e5e5
                float right
                display block
                font-family $rale

            ul
                margin-top 45px
                padding-left 20px
                border-left 3px solid $gris-oscuro

                li
                    border-bottom 2px solid $gris-oscuro
                    margin-bottom 10px
                    padding-bottom 5px
                    font-size 1.4em
                    font-weight 200

                    span,input
                        display inline-block
                        margin 0
                        padding 0

                    span
                        text-align left
                        width 83%

                     input
                         text-align right
                         width 15%

        .box3
            width 23%
            //min-width 190px
            overflow-x hidden

            ul.header-chat
                background $gris-claro
                text-align left
                padding 5px 0

                li
                    background $gris-oscuro
                    display inline-block
                    margin 0 3px

                    a
                        text-decoration none
                        font-size 1.4em
                        padding 5px 10px
                        color #000
                        font-weight 200

            h2
                display block
                background #fff
                color #000
                padding 5px 0
                font-weight 200
                text-align left

            ul.content-chat
                li
                    border-bottom 1px solid #f1f1f1
                    margin 1px 0
                    padding 2px 0

                    >div
                        width 15%
                        @extend .style-inline
                        vertical-align top

                        img
                            display block
                            width 100%
                            height 40px

                    .msj
                        width 61%
                        text-align left
                        margin-left 5px

                        span:first-child
                            font-size 1.3em
                            font-weight 400
                            display block

                        span:last-child
                            font-size 1.2em
                            font-weight 200
                            display block

                    .hour
                        padding 3px 4px

                    &:last-child
                        border-bottom 0


            a.invitar
                text-decoration none
                font-size 1.6em
                padding 10px
                color #000
                background $B1
                display block
                font-family $rale
                text-align center
                margin-top 10px

/* End module .wrapper expanded (Card) */

